<div class="container-fluid mt-4">
  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title mb-0">レビュー/コメント管理</h3>
      <%= link_to admin_dashboards_path, class: "btn btn-secondary" do %>
        <i class="fas fa-arrow-left mr-2"></i>ダッシュボードへ戻る
      <% end %>
    </div>
    <div class="card-body">
      <% if flash[:success] %>
        <div class="alert alert-success" role="alert">
          <%= flash[:success] %>
        </div>
      <% end %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th>投稿日時</th>
              <th>ユーザー</th>
              <th>レビュー対象の駐輪場</th>
              <th class="text-center">評価</th>
              <th>コメント本文</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td class="align-middle small"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                <td class="align-middle"><%= comment.user.name %></td>
                <td class="align-middle">
                  <%= link_to comment.parking_lot.parking_lot_name, parking_lot_path(comment.parking_lot), target: '_blank', rel: 'noopener' %>
                </td>
                <td class="align-middle text-center font-weight-bold"><%= comment.score %> ★</td>
                <td class="align-middle" style="min-width: 300px;"><%= comment.body %></td>
                <td class="align-middle">
                  <%= link_to "削除", admin_comment_path(comment), method: :delete, data: { confirm: "このレビューを本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>