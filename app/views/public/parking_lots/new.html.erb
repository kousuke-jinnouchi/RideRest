<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
          <h1 class="h4 mb-0">駐輪場を登録する</h1>
        </div>
        <% if @parking_lot.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">入力内容に <%= @parking_lot.errors.count %> 件のエラーがありました</h4>
            <hr>
            <ul class="mb-0">
              <% @parking_lot.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="card-body p-4">
          <%= form_with model: @parking_lot, local: true do |f| %>
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :parking_lot_name, "駐輪場名", class: "form-label" %>
                <%= f.text_field :parking_lot_name, class: "form-control", placeholder: "例：渋谷パークバイク駐輪場" %>
              </div>
            </div>
            <div class="field mb-5">
              <%= f.label :tag_list, "タグ(複数選択可)" %>
              <div class="tag-checkboxes d-flex flex-wrap">
                <%= f.collection_check_boxes(:tag_list, @all_tags, :name, :name) do |b| %>
                  <div class="form-check mr-4">
                    <%= b.check_box(class: 'form-check-input') %>
                    <%= b.label(class: 'form-check-label') %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="row mb-3 align-items-end">
              <div class="col-md-4">
                <%= label_tag :zipcode, "郵便番号 (ハイフンなし)", class: "form-label" %>
                <%= text_field_tag :zipcode, nil, class: "form-control", placeholder: "例: 1500041" %>
              </div>
              <div class="col-md-8">
                <%= f.label :address, "住所", class: "form-label" %>
                <%= f.text_field :address, class: "form-control", placeholder: "郵便番号から自動入力されます" %>
              </div>
            </div>
            <div class="row mb-3">
              <small class="form-text text-muted mb-2">※緯度・経度は住所から自動で設定されますが、手動で調整も可能です。</small>
              <div class="col-md-6">
                <%= f.label :latitude, "緯度", class: "form-label" %>
                <%= f.text_field :latitude, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :longitude, "経度", class: "form-label" %>
                <%= f.text_field :longitude, class: "form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                 <%= f.label :fee, "料金（円）", class: "form-label" %>
                 <div class="input-group">
                    <%= f.text_field :fee, class: "form-control", placeholder: "例: 最初の60分無料、以降30分ごと100円" %>
                 </div>
              </div>
              <div class="col-md-6">
                <%= f.label :image, "画像", class: "form-label" %>
                <%= f.file_field :image, accept: "image/*", class: "form-control" %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :description, "説明", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "駐輪場の特徴、利用時の注意点などを入力してください。" %>
            </div>
            <div class="d-grid">
              <%= f.submit '登録する', class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag "jpostal", 'data-turbolinks-track': 'reload' %>